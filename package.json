{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"type": "module",
	"homepage": "https://github.com/terminal-nerds/configs",
	"repository": "terminal-nerds/configs.git",
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=16",
		"pnpm": ">=6"
	},
	"scripts": {
		"build": "ultra --recursive --build",
		"clean": "ultra --root --recursive clean:all",
		"clean:all": "pnpm clean:cache",
		"clean:cache": "rimraf \"./node_modules/.cache\"",
		"dev": "ultra --recursive dev",
		"format": "ultra --root --recursive format:all",
		"format:all": "pnpm format:prettier && pnpm format:syncpack",
		"format:prettier": "pretty-quick --branch develop --pattern \"**/*\" --pattern \"!{helpers,packages}/**/*\" --verbose",
		"format:syncpack": "syncpack format",
		"lint": "ultra --root --recursive lint:all",
		"lint:all": "pnpm lint:format && pnpm lint:js && pnpm lint:md",
		"lint:format": "pretty-quick --branch develop --pattern \"**/*\" --pattern \"!{helpers,packages}/**/*\" --verbose --check",
		"lint:js": "eslint . --ext .cjs,.json,.yml,.yaml --ignore \"./packages\" --cache --cache-location \"./node_modules/.cache/eslint\"",
		"lint:md": "markdownlint . --dot --ignore-path \"./.gitignore\" --ignore \"./{helpers,packages}/**/*\""
	},
	"devDependencies": {
		"@changesets/cli": "^2.19.0",
		"@terminal-nerds/config-eslint": "workspace:*",
		"@terminal-nerds/config-markdownlint": "workspace:*",
		"@terminal-nerds/config-prettier": "workspace:*",
		"esbuild": "^0.14.10",
		"eslint": "^8.6.0",
		"markdownlint-cli": "^0.30.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.5.1",
		"pretty-quick": "^3.1.3",
		"rimraf": "^3.0.2",
		"syncpack": "^6.0.0",
		"tslib": "^2.3.1",
		"typescript": "^4.5.4",
		"ultra-runner": "^3.10.5"
	}
}
