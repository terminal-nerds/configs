{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"type": "module",
	"author": "Matt Kadlubowski <xeho91>",
	"homepage": "https://github.com/terminal-nerds/configs",
	"repository": "terminal-nerds/configs.git",
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=16",
		"pnpm": ">=6"
	},
	"volta": {
		"node": "16.13.2"
	},
	"scripts": {
		"build": "ultra --recursive --build build:all",
		"clean": "ultra --root --recursive clean:all",
		"clean:all": "pnpm clean:cache",
		"clean:cache": "rimraf \"./node_modules/.cache\" ; rimraf \"./.ultra.cache.json\"",
		"dev": "ultra --recursive dev",
		"format": "ultra --root --recursive format:all",
		"format:all": "pnpm format:prettier ; pnpm format:syncpack",
		"format:prettier": "pretty-quick --branch develop --pattern \"**/*\" --pattern \"!{helpers,packages}/**/*\" --verbose",
		"format:syncpack": "syncpack format",
		"lint": "ultra --root --recursive --concurrency 50 lint:all",
		"lint:all": "pnpm lint:format ; pnpm lint:js ; pnpm lint:md",
		"lint:format": "pretty-quick --branch develop --pattern \"**/*\" --pattern \"!{helpers,packages}/**/*\" --verbose --check",
		"lint:js": "DEBUG=\"eslint:cli-engine\" eslint . --ext .cjs,.json,.yml,.yaml --ignore \"./packages\" --cache --cache-location \"./node_modules/.cache/eslint\"",
		"lint:md": "markdownlint . --dot --ignore-path \"./.gitignore\" --ignore \"./{helpers,packages}/**/*\" --ignore \"./.changeset/*.md\""
	},
	"ultra": {
		"concurrent": [
			"clean:all",
			"format:all",
			"lint:all"
		]
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.2",
		"@changesets/cli": "^2.20.0",
		"@terminal-nerds/eslint-config": "workspace:*",
		"@terminal-nerds/markdownlint-config": "workspace:*",
		"@terminal-nerds/prettier-config": "workspace:*",
		"eslint": "^8.7.0",
		"markdownlint-cli": "^0.30.0",
		"prettier": "^2.5.1",
		"pretty-quick": "^3.1.3",
		"rimraf": "^3.0.2",
		"syncpack": "^6.2.0",
		"typescript": "^4.5.4",
		"ultra-runner": "^3.10.5"
	}
}
