{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"type": "module",
	"name": "@workspace/root",
	"homepage": "https://github.com/terminal-nerds/configs",
	"repository": "terminal-nerds/configs.git",
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=16",
		"pnpm": ">=6"
	},
	"packageManager": "pnpm@7.18.2",
	"volta": {
		"node": "18.12.1"
	},
	"scripts": {
		"build": "turbo run build -v",
		"clean": "pnpm clean:cache ; turbo run clean -v",
		"clean:cache": "del \"./node_modules/.cache\"",
		"contributors:add": "all-contributors add",
		"contributors:generate": "all-contributors generate",
		"deps:check": "pnpm lint:deps ; turbo run lint:deps -v",
		"deps:upgrade": "pnpm deps:upgrade:root ; pnpm deps:upgrade:helpers ; pnpm:deps:upgrade:packages",
		"deps:upgrade:root": "pnpm upgrade --interactive --latest",
		"deps:upgrade:helpers": "pnpm upgrade --interactive --latest --filter ./helpers",
		"deps:upgrade:packages": "pnpm upgrade --interactive --latest --filter ./packages",
		"dev": "turbo run dev -v",
		"format": "concurrently \"pnpm:format:*\" --group --timings ; turbo run format -v",
		"format:prettier": "pretty-quick --branch main --pattern \"**/*\" --pattern \"!{helpers,packages}/**/*\" --verbose",
		"format:syncpack": "syncpack format",
		"lint": "concurrently \"pnpm:lint:*\" --group --timings ; pnpm turbo run lint -v",
		"lint:deps": "concurrently \"depcheck\" \"syncpack list-mismatches\" --group --timings",
		"lint:format": "pretty-quick --branch main --pattern \"**/*\" --pattern \"!{helpers,packages}/**/*\" --verbose --check",
		"lint:js": "DEBUG=\"eslint:cli-engine\" eslint . --ext .cjs,.json,.yml,.yaml --ignore \"./packages\" --cache --cache-location \"./node_modules/.cache/eslint\"",
		"lint:md": "markdownlint . --dot --ignore-path \"./.gitignore\" --ignore \"./{.changeset,helpers,packages}/**/*\"",
		"prepare": "husky install",
		"preinstall": "npx only-allow pnpm"
	},
	"devDependencies": {
		"@changesets/changelog-github": "0.4.7",
		"@changesets/cli": "2.25.2",
		"@terminal-nerds/eslint-config": "workspace:*",
		"@terminal-nerds/markdownlint-config": "workspace:*",
		"@terminal-nerds/prettier-config": "workspace:*",
		"@terminal-nerds/syncpack-config": "workspace:*",
		"all-contributors-cli": "6.24.0",
		"browserslist": "4.21.4",
		"concurrently": "7.6.0",
		"del-cli": "4.0.1",
		"depcheck": "1.4.3",
		"eslint": "8.12.0",
		"husky": "7.0.4",
		"lint-staged": "12.5.0",
		"markdownlint-cli": "0.31.1",
		"prettier": "2.8.1",
		"pretty-quick": "3.1.3",
		"syncpack": "6.2.0",
		"turbo": "1.6.3",
		"typescript": "4.9.4"
	}
}
