{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"type": "module",
	"name": "@workspace/root",
	"homepage": "https://github.com/terminal-nerds/configs",
	"repository": "terminal-nerds/configs.git",
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=18",
		"pnpm": ">=7"
	},
	"packageManager": "pnpm@7.21.0",
	"scripts": {
		"build": "turbo run build -v",
		"clean": "pnpm clean:cache ; turbo run clean -v",
		"clean:cache": "del \"./node_modules/.cache\"",
		"contributors:add": "all-contributors add",
		"contributors:generate": "all-contributors generate",
		"deps:check": "pnpm lint:deps ; turbo run lint:deps -v",
		"deps:upgrade": "pnpm deps:upgrade:root ; pnpm deps:upgrade:shared ; pnpm:deps:upgrade:packages",
		"deps:upgrade:root": "pnpm upgrade --interactive --latest",
		"deps:upgrade:shared": "pnpm upgrade --interactive --latest --filter ./shared",
		"deps:upgrade:packages": "pnpm upgrade --interactive --latest --filter ./packages",
		"dev": "turbo run dev -v",
		"format": "concurrently \"pnpm:format:*\" --group --timings ; turbo run format -v",
		"format:prettier": "pretty-quick --branch main --pattern \"**/*\" --pattern \"!{shared,packages}/**/*\" --verbose",
		"format:syncpack": "syncpack format",
		"lint": "concurrently \"pnpm:lint:*\" --group --timings ; pnpm turbo run lint -v",
		"lint:deps": "concurrently \"depcheck\" \"syncpack list-mismatches\" --group --timings",
		"lint:format": "pretty-quick --branch main --pattern \"**/*\" --pattern \"!{shared,packages}/**/*\" --verbose --check",
		"lint:js": "DEBUG=\"eslint:cli-engine\" eslint . --ext .cjs,.json,.yml,.yaml --ignore \"./packages\" --cache --cache-location \"./node_modules/.cache/eslint\"",
		"lint:md": "markdownlint . --dot --ignore-path \"./.gitignore\" --ignore \"./{shared,packages}/**/*\"",
		"prepare": "husky install",
		"preinstall": "npx only-allow pnpm"
	},
	"devDependencies": {
		"@changesets/changelog-github": "0.4.8",
		"@changesets/cli": "2.26.0",
		"@terminal-nerds/eslint-config": "0.9.0",
		"@terminal-nerds/markdownlint-config": "0.4.0",
		"@terminal-nerds/prettier-config": "0.2.2",
		"@terminal-nerds/syncpack-config": "0.2.0",
		"@terminal-nerds/tsup-config": "0.0.0",
		"@types/node": "18.11.18",
		"all-contributors-cli": "6.24.0",
		"browserslist": "4.21.4",
		"concurrently": "7.6.0",
		"del-cli": "5.0.0",
		"depcheck": "1.4.3",
		"eslint": "8.31.0",
		"husky": "8.0.2",
		"lint-staged": "13.1.0",
		"markdownlint-cli": "0.32.2",
		"prettier": "2.8.1",
		"pretty-quick": "3.1.3",
		"syncpack": "8.4.11",
		"tsup": "6.5.0",
		"turbo": "1.6.3",
		"typescript": "4.9.4"
	}
}
