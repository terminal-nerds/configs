{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"type": "module",
	"homepage": "https://github.com/terminal-nerds/configs",
	"repository": "terminal-nerds/configs.git",
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=16",
		"pnpm": ">=6"
	},
	"turbo": {
		"baseBranch": "main",
		"npmClient": "pnpm",
		"pipeline": {
			"build": {
				"dependsOn": [
					"^build"
				],
				"outputs": [
					"dist/**"
				]
			},
			"clean": {},
			"dev": {
				"cache": false
			},
			"lint": {}
		}
	},
	"scripts": {
		"build": "turbo run build",
		"clean": "run-p clean:*",
		"clean:cache": "rimraf \"./node_modules/.cache\"",
		"clean:modules": "turbo run clean",
		"dev": "turbo run dev",
		"format": "run-p format:*",
		"format:code": "pretty-quick --branch develop --verbose",
		"format:packages": "syncpack format",
		"lint": "run-p lint:*",
		"lint:format": "pretty-quick --branch develop --verbose --check",
		"lint:js": "eslint . --ext .cjs,.ts --cache --cache-location \"./node_modules/.cache/eslint\""
	},
	"devDependencies": {
		"@terminal-nerds/config-eslint": "workspace:*",
		"@terminal-nerds/config-prettier": "workspace:*",
		"eslint": "^8.6.0",
		"prettier": "^2.5.1",
		"pretty-quick": "^3.1.3",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2",
		"syncpack": "^6.0.0",
		"turbo": "^1.0.24"
	}
}
