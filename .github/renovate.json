{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"assigneesFromCodeOwners": true,
	"baseBranches": ["main"],
	"dependencyDashboard": true,
	"extends": ["config:base"],
	"packageRules": [
		{
			"groupName": "helpers",
			"labels": ["🧰 monorepo"],
			"packagePatterns": ["pkg-up", "read-pkg-up"]
		},
		{
			"groupName": "ESLint",
			"labels": ["🕵️ linter"],
			"packagePatterns": ["eslint"]
		},
		{
			"groupName": "markdownlint",
			"labels": ["🕵️ linter"],
			"packagePatterns": ["markdownlint"]
		},
		{
			"groupName": "Prettier",
			"labels": ["🧹 formatter"],
			"packagePatterns": ["prettier"]
		},
		{
			"groupName": "Stylelint",
			"labels": ["🕵️ linter"],
			"packagePatterns": ["stylelint"]
		},
		{
			"groupName": "TypeScript",
			"labels": ["🔧 tool"],
			"packagePatterns": [
				"@types/node",
				"tslib",
				"type-fest",
				"tsup",
				"typescript"
			]
		}
	],
	"reviewersFromCodeOwners": true,
	"schedule": ["after 10pm and before 5am every weekday", "every weekend"],
	"semanticCommits": "auto",
	"semanticCommitScope": "dependencies"
}
