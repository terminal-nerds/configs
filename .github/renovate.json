{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"assigneesFromCodeOwners": true,
	"baseBranches": ["main"],
	"commitMessagePrefix": "chore: {{#if isPin}}📌{{else if isRollback}}⬇️{{else if isReplacement}}🏗️{{else if (or isMajor isPatch isSingleVersion)}}⬆️{{/if}} ",
	"commitMessageTopic": "dependency `{{depName}}`",
	"commitMessageExtra": "to v`{{#if isMajor}}{{{newMajor}}}{{else}}{{#if isSingleVersion}}{{{newVersion}}}{{else}}{{{newValue}}}{{/if}}{{/if}}`",
	"dependencyDashboard": true,
	"extends": ["config:base"],
	"packageRules": [
		{
			"groupName": "monorepo tools",
			"labels": ["⬆️ dependencies", "🧰 monorepo"],
			"packagePatterns": [
				"all-contributors-cli",
				"changesets",
				"del-cli",
				"husky",
				"lint-staged",
				"tsup",
				"turbo"
			]
		},
		{
			"groupName": "helpers dependencies",
			"labels": ["⬆️ dependencies", "🧰 monorepo"],
			"packagePatterns": [
				"deepmerge",
				"pkg-up",
				"read-pkg-up",
				"type-fest"
			]
		},
		{
			"groupName": "ESLint dependencies",
			"labels": ["⬆️ dependencies", "📦 package:eslint-config"],
			"packagePatterns": ["eslint"]
		},
		{
			"groupName": "markdownlint dependencies",
			"labels": ["⬆️ dependencies", "📦 package:markdownlint-config"],
			"packagePatterns": ["markdownlint"]
		},
		{
			"groupName": "Prettier dependencies",
			"labels": ["⬆️ dependencies", "📦 package:prettier-config"],
			"packagePatterns": ["prettier"]
		},
		{
			"groupName": "Stylelint dependencies",
			"labels": ["⬆️ dependencies", "📦 package:stylelint-config"],
			"packagePatterns": ["stylelint"]
		},
		{
			"groupName": "syncpack dependencies",
			"labels": ["⬆️ dependencies", "📦 package:syncpack-config"],
			"packagePatterns": ["syncpack"]
		},
		{
			"groupName": "TypeScript dependencies",
			"labels": ["⬆️ dependencies", "📦 package:typescript-config"],
			"packagePatterns": ["@types/node", "tslib", "typescript"]
		}
	],
	"reviewersFromCodeOwners": true,
	"schedule": ["after 10pm and before 5am every weekday", "every sunday"],
	"stabilityDays": 3,
	"timezone": "Asia/Taipei"
}
