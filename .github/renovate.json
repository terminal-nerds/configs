{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"assigneesFromCodeOwners": true,
	"baseBranches": ["main"],
	"dependencyDashboard": true,
	"extends": ["config:base"],
	"packageRules": [
		{
			"groupName": "eslint",
			"labels": ["🕵️ linter"],
			"packagePatterns": ["eslint"]
		},
		{
			"groupName": "markdownlint",
			"labels": ["🕵️ linter"],
			"packagePatterns": ["markdownlint"]
		},
		{
			"groupName": "prettier",
			"labels": ["🧹 formatter"],
			"packagePatterns": ["prettier"]
		},
		{
			"groupName": "stylelint",
			"labels": ["🕵️ linter"],
			"packagePatterns": ["stylelint"]
		}
	],
	"reviewersFromCodeOwners": true,
	"schedule": ["on the first day of week"],
	"semanticCommits": "auto",
	"semanticCommitScope": "dependencies"
}
