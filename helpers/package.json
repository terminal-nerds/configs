{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"type": "module",
	"name": "@workspace/helpers",
	"version": "0.0.0",
	"engines": {
		"node": ">=16"
	},
	"exports": {
		"./environment": "./build/environment.js",
		"./module": "./build/module.js"
	},
	"typesVersions": {
		"*": {
			"*": [
				"./build/*"
			]
		}
	},
	"ultra": {
		"concurrent": [
			"clean:all",
			"format:all",
			"lint:all"
		]
	},
	"scripts": {
		"build": "ultra build:all",
		"build:all": "pnpm build:module",
		"build:module": "tsup",
		"clean": "ultra clean:all",
		"clean:all": "pnpm clean:build ; pnpm clean:cache",
		"clean:build": "rimraf \"./build\"",
		"clean:cache": "rimraf \"./node_modules/.cache\" ; rimraf \"./.ultra.cache.json\"",
		"dev": "tsup --watch",
		"format": "ultra format:all",
		"format:all": "pnpm format:prettier ; pnpm format:syncpack",
		"format:prettier": "pretty-quick --branch main --pattern \"./helpers/**/*\" --verbose",
		"format:syncpack": "syncpack format",
		"lint": "ultra lint:all",
		"lint:all": "pnpm lint:dependencies ; pnpm lint:format ; pnpm lint:js ; pnpm lint:types",
		"lint:dependencies": "depcheck",
		"lint:format": "pretty-quick --branch main --pattern \"./helpers/**/*\" --verbose --check",
		"lint:js": "DEBUG=\"eslint:cli-engine\" eslint . --ext .json,.ts --cache --cache-location \"./node_modules/.cache/eslint\"",
		"lint:types": "tsc --noEmit"
	},
	"dependencies": {
		"read-pkg-up": "9.1.0"
	},
	"devDependencies": {
		"@terminal-nerds/typescript-config": "workspace:*",
		"@types/node": "^17.0.17",
		"tsup": "5.11.13",
		"type-fest": "2.11.2",
		"typescript": "4.5.5"
	}
}
