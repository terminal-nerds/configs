{
	"$schema": "https://json.schemastore.org/package",
	"name": "@workspace/helpers",
	"private": true,
	"main": "build/index.js",
	"files": [
		"/build"
	],
	"scripts": {
		"build": "run-s build:*",
		"build:module": "esbuild --bundle \"./source/index.ts\" --outdir=\"./dist\" --minify --sourcemap --platform=node --target=node16 --format=cjs --analyze=verbose --color=true",
		"build:types": "tsc --emitDeclarationOnly",
		"clean:all": "pnpm clean:build && pnpm clean:cache",
		"clean:build": "rimraf \"./dist\"",
		"clean:cache": "rimraf \"./node_modules/.cache\"",
		"dev": "run-p dev:*",
		"dev:module": "pnpm build:module -- --watch",
		"dev:types": "pnpm build:types -- --watch",
		"format:all": "pnpm format:prettier",
		"format:prettier": "pretty-quick --branch develop --pattern \"./helpers/**/*\" --verbose",
		"lint:all": "pnpm lint:format && pnpm lint:js && pnpm lint:types",
		"lint:format": "pretty-quick --branch develop --pattern \"./helpers/**/*\" --verbose --check",
		"lint:js": "eslint . --ext .json,.ts --cache --cache-location \"./node_modules/.cache/eslint\"",
		"lint:types": "tsc --noEmit"
	},
	"devDependencies": {
		"@types/node": "^17.0.5",
		"@workspace/configs": "workspace:*"
	}
}
