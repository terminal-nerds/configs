{
	"$schema": "https://json.schemastore.org/package",
	"publishConfig": {
		"registry": "https://registry.npmjs.org/",
		"access": "public"
	},
	"name": "@terminal-nerds/config-eslint",
	"version": "1.0.0-canary.2",
	"description": "Terminal Nerds extendable configuration for ESLint.",
	"keywords": [
		"config",
		"linter",
		"eslint"
	],
	"license": "MIT",
	"homepage": "https://github.com/terminal-nerds/configs/tree/main/packages/eslint",
	"repository": "terminal-nerds/configs.git",
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=16"
	},
	"main": "dist/index.js",
	"files": [
		"/dist"
	],
	"scripts": {
		"build": "ultra build:all",
		"build:all": "pnpm clean:build && pnpm build:types && pnpm build:package",
		"build:types": "tsc --emitDeclarationOnly",
		"build:package": "esbuild --bundle \"./source/index.ts\" --outdir=\"./dist\" --minify --sourcemap --platform=node --target=node16 --format=cjs --analyze=verbose --color=true",
		"clean": "ultra clean:all",
		"clean:all": "pnpm clean:build; pnpm clean:cache",
		"clean:build": "rimraf \"./dist\"",
		"clean:cache": "rimraf \"./node_modules/.cache\"",
		"dev": "tsc --build --watch",
		"format": "ultra format:all",
		"format:all": "pnpm format:prettier ; pnpm format:syncpack",
		"format:prettier": "pretty-quick --branch develop --pattern \"./packages/eslint/**/*\" --verbose",
		"format:syncpack": "syncpack format",
		"lint": "ultra lint:all",
		"lint:all": "pnpm lint:format ; pnpm lint:js ; pnpm lint:md ; pnpm lint:types",
		"lint:format": "pretty-quick --branch develop --pattern \"./packages/eslint/**/*\" --verbose --check",
		"lint:js": "DEBUG=\"eslint:cli-engine\" eslint . --ext .json,.ts --cache --cache-location \"./node_modules/.cache/eslint\"",
		"lint:md": "markdownlint . --dot --ignore-path \"../../.gitignore\" --config \"../../.markdownlint.json\"",
		"lint:types": "tsc --noEmit"
	},
	"ultra": {
		"concurrent": [
			"clean:all",
			"format:all",
			"lint:all"
		]
	},
	"peerDependencies": {
		"eslint": "^8.6.0"
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^5.8.1",
		"@typescript-eslint/parser": "^5.8.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-define-config": "^1.2.1",
		"eslint-plugin-compat": "^4.0.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-json-schema-validator": "^2.1.24",
		"eslint-plugin-jsonc": "^2.0.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-regexp": "^1.5.1",
		"eslint-plugin-sonarjs": "^0.11.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"eslint-plugin-unicorn": "^40.0.0",
		"eslint-plugin-yml": "^0.12.0",
		"jsonc-eslint-parser": "^2.0.4",
		"yaml-eslint-parser": "^0.5.0"
	},
	"devDependencies": {
		"@types/eslint": "^8.2.1",
		"@types/node": "^17.0.5",
		"@workspace/configs": "workspace:*",
		"@workspace/helpers": "workspace:*",
		"deepmerge-ts": "^2.0.1",
		"eslint": "^8.6.0"
	}
}
