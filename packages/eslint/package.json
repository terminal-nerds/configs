{
	"$schema": "https://json.schemastore.org/package",
	"type": "module",
	"name": "@terminal-nerds/eslint-config",
	"version": "0.22.0",
	"description": "Terminal Nerds extendable configuration for ESLint.",
	"keywords": [
		"config",
		"linter",
		"eslint"
	],
	"license": "MIT",
	"homepage": "https://github.com/terminal-nerds/configs/tree/main/packages/eslint",
	"repository": {
		"type": "git",
		"url": "https://github.com/terminal-nerds/configs.git",
		"directory": "packages/eslint"
	},
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=18"
	},
	"exports": {
		"types": "./dist/index.d.ts",
		"require": "./dist/index.cjs"
	},
	"files": [
		"/dist"
	],
	"dependencies": {
		"@docusaurus/eslint-plugin": "2.4.0",
		"@emotion/eslint-plugin": "11.10.0",
		"@terminal-nerds/constants-config": "workspace:*",
		"@terminal-nerds/snippets-config": "0.4.3",
		"@terminal-nerds/snippets-extension": "0.4.1",
		"@terminal-nerds/snippets-runtime": "0.6.1",
		"@typescript-eslint/eslint-plugin": "5.59.1",
		"@typescript-eslint/parser": "5.59.1",
		"@unocss/eslint-config": "0.51.8",
		"eslint-config-next": "13.3.2",
		"eslint-config-prettier": "8.8.0",
		"eslint-define-config": "1.20.0",
		"eslint-plugin-compat": "4.1.4",
		"eslint-plugin-diff": "2.0.1",
		"eslint-plugin-es-x": "6.1.0",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-jest": "27.2.1",
		"eslint-plugin-jest-dom": "4.0.3",
		"eslint-plugin-jest-formatting": "3.1.0",
		"eslint-plugin-jsdoc": "43.1.1",
		"eslint-plugin-json-schema-validator": "4.4.0",
		"eslint-plugin-jsonc": "2.7.0",
		"eslint-plugin-jsx-a11y": "6.7.1",
		"eslint-plugin-n": "15.7.0",
		"eslint-plugin-react": "7.32.2",
		"eslint-plugin-react-hooks": "4.6.0",
		"eslint-plugin-regexp": "1.14.0",
		"eslint-plugin-simple-import-sort": "10.0.0",
		"eslint-plugin-sonarjs": "0.19.0",
		"eslint-plugin-sql": "2.3.2",
		"eslint-plugin-storybook": "0.6.11",
		"eslint-plugin-svelte": "2.27.2",
		"eslint-plugin-tailwindcss": "3.11.0",
		"eslint-plugin-testing-library": "5.10.3",
		"eslint-plugin-tsdoc": "0.2.17",
		"eslint-plugin-typescript-compat": "1.0.1",
		"eslint-plugin-unicorn": "46.0.0",
		"eslint-plugin-yml": "1.5.0",
		"jsonc-eslint-parser": "2.2.0",
		"yaml-eslint-parser": "1.2.0"
	},
	"peerDependencies": {
		"eslint": "8.39.0"
	},
	"peerDependenciesMeta": {
		"svelte": {
			"optional": true
		},
		"tailwindcss": {
			"optional": true
		}
	},
	"devDependencies": {
		"@terminal-nerds/tsup-config": "workspace:*",
		"@terminal-nerds/typescript-config": "workspace:*",
		"@types/eslint": "8.37.0",
		"tsup": "6.7.0",
		"typescript": "5.0.4"
	},
	"scripts": {
		"build": "tsup",
		"clean": "concurrently \"pnpm:clean:*\" --group --timings",
		"clean:build": "del \"./dist\"",
		"clean:cache": "del \"./.turbo\" \"./node_modules/.cache\"",
		"dev": "tsup --watch",
		"fix": "concurrently \"pnpm:fix:*\" --group --timings",
		"fix:format": "pretty-quick --branch main --pattern \"packages/eslint/**\" --verbose",
		"fix:js": "pnpm lint:js --fix",
		"fix:md": "pnpm lint:md --fix",
		"fix:pkg": "syncpack format ; syncpack fix-mismatches",
		"lint": "concurrently \"pnpm:lint:*\" --group --timings",
		"lint:deps": "depcheck",
		"lint:format": "pnpm fix:format --check",
		"lint:js": "DEBUG=\"eslint:cli-engine\" eslint . --cache --cache-location \"./node_modules/.cache/eslint\" --ext .json,.ts ",
		"lint:md": "markdownlint . --config \"../../.markdownlint.json\" --dot --ignore-path \"../../.gitignore\"",
		"lint:types": "tsc --noEmit",
		"prepack": "clean-package --config \"../../.clean-packagerc.cjs\""
	}
}
