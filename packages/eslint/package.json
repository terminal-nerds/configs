{
	"$schema": "https://json.schemastore.org/package",
	"type": "commonjs",
	"publishConfig": {
		"registry": "https://registry.npmjs.org/",
		"access": "public"
	},
	"name": "@terminal-nerds/eslint-config",
	"version": "0.1.1",
	"description": "Terminal Nerds extendable configuration for ESLint.",
	"keywords": [
		"config",
		"linter",
		"eslint"
	],
	"license": "MIT",
	"homepage": "https://github.com/terminal-nerds/configs/tree/main/packages/eslint",
	"repository": "terminal-nerds/configs.git",
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=16"
	},
	"main": "dist/index.js",
	"files": [
		"/dist"
	],
	"scripts": {
		"build": "ultra build:all",
		"build:all": "pnpm build:package",
		"build:package": "tsup",
		"clean": "ultra clean:all",
		"clean:all": "pnpm clean:build; pnpm clean:cache",
		"clean:build": "rimraf \"./dist\"",
		"clean:cache": "rimraf \"./node_modules/.cache\" ; rimraf \"./.ultra.cache.json\"",
		"dev": "tsup --watch",
		"format": "ultra format:all",
		"format:all": "pnpm format:prettier ; pnpm format:syncpack",
		"format:prettier": "pretty-quick --branch develop --pattern \"./packages/eslint/**/*\" --verbose",
		"format:syncpack": "syncpack format",
		"lint": "ultra lint:all",
		"lint:all": "pnpm lint:format ; pnpm lint:js ; pnpm lint:md ; pnpm lint:types",
		"lint:format": "pretty-quick --branch develop --pattern \"./packages/eslint/**/*\" --verbose --check",
		"lint:js": "DEBUG=\"eslint:cli-engine\" eslint . --ext .json,.ts --config \"../../.eslintrc.cjs\" --cache --cache-location \"./node_modules/.cache/eslint\"",
		"lint:md": "markdownlint . --dot --ignore-path \"../../.gitignore\" --config \"../../.markdownlint.json\"",
		"lint:types": "tsc --noEmit"
	},
	"ultra": {
		"concurrent": [
			"clean:all",
			"format:all",
			"lint:all"
		]
	},
	"peerDependencies": {
		"eslint": "^8.6.0"
	},
	"dependencies": {
		"@rushstack/eslint-patch": "^1.1.0",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-define-config": "^1.2.2",
		"eslint-plugin-compat": "^4.0.1",
		"eslint-plugin-diff": "^1.0.12",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-json-schema-validator": "^2.1.31",
		"eslint-plugin-jsonc": "^2.0.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-regexp": "^1.5.1",
		"eslint-plugin-sonarjs": "^0.11.0",
		"eslint-plugin-svelte3": "^3.3.0",
		"eslint-plugin-unicorn": "^40.0.0",
		"eslint-plugin-yml": "^0.13.0",
		"jsonc-eslint-parser": "^2.0.4",
		"yaml-eslint-parser": "^0.5.0"
	},
	"devDependencies": {
		"@types/eslint": "8.4.1",
		"@types/node": "17.0.13",
		"@workspace/configs": "workspace:*",
		"@workspace/helpers": "workspace:*",
		"deepmerge-ts": "2.0.1",
		"tsup": "5.11.13",
		"typescript": "4.5.5"
	}
}
