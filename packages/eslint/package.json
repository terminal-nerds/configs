{
	"$schema": "https://json.schemastore.org/package",
	"type": "module",
	"name": "@terminal-nerds/eslint-config",
	"version": "0.12.0",
	"description": "Terminal Nerds extendable configuration for ESLint.",
	"keywords": [
		"config",
		"linter",
		"eslint"
	],
	"license": "MIT",
	"homepage": "https://github.com/terminal-nerds/configs/tree/main/packages/eslint",
	"repository": {
		"type": "git",
		"url": "https://github.com/terminal-nerds/configs.git",
		"directory": "packages/eslint"
	},
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=18"
	},
	"exports": {
		"require": "./dist/index.cjs",
		"types": "./dist/index.d.ts"
	},
	"files": [
		"/dist"
	],
	"scripts": {
		"build": "tsup",
		"clean": "concurrently \"pnpm:clean:*\" --group --timings",
		"clean:build": "del \"./dist\"",
		"clean:cache": "del \"./.turbo\" \"./node_modules/.cache\"",
		"dev": "tsup --watch",
		"fix": "concurrently \"pnpm:fix:*\" --group --timings",
		"fix:format": "pretty-quick --branch main --pattern \"packages/eslint/**\" --verbose",
		"fix:js": "pnpm lint:js --fix",
		"fix:md": "pnpm lint:md --fix",
		"fix:pkg": "syncpack format ; syncpack fix-mismatches",
		"lint": "concurrently \"pnpm:lint:*\" --group --timings",
		"lint:deps": "depcheck",
		"lint:format": "pnpm fix:format --check",
		"lint:js": "DEBUG=\"eslint:cli-engine\" eslint . --cache --cache-location \"./node_modules/.cache/eslint\" --ext .json,.ts ",
		"lint:md": "markdownlint . --config \"../../.markdownlint.json\" --dot --ignore-path \"../../.gitignore\"",
		"lint:types": "tsc --noEmit",
		"prepack": "clean-package --config \"../../.clean-packagerc.cjs\""
	},
	"peerDependencies": {
		"eslint": "8.32.0"
	},
	"peerDependenciesMeta": {
		"svelte": {
			"optional": true
		},
		"tailwindcss": {
			"optional": true
		}
	},
	"dependencies": {
		"@docusaurus/eslint-plugin": "2.2.0",
		"@emotion/eslint-plugin": "11.10.0",
		"@typescript-eslint/eslint-plugin": "5.48.1",
		"@typescript-eslint/parser": "5.48.1",
		"eslint-config-next": "13.1.2",
		"eslint-config-prettier": "8.6.0",
		"eslint-define-config": "1.14.0",
		"eslint-plugin-compat": "4.0.2",
		"eslint-plugin-diff": "2.0.1",
		"eslint-plugin-import": "2.27.4",
		"eslint-plugin-jest": "27.2.1",
		"eslint-plugin-jest-dom": "4.0.3",
		"eslint-plugin-jest-formatting": "3.1.0",
		"eslint-plugin-json-schema-validator": "4.0.3",
		"eslint-plugin-jsonc": "2.6.0",
		"eslint-plugin-jsx-a11y": "6.7.1",
		"eslint-plugin-n": "15.6.1",
		"eslint-plugin-react": "7.32.0",
		"eslint-plugin-react-hooks": "4.6.0",
		"eslint-plugin-regexp": "1.12.0",
		"eslint-plugin-simple-import-sort": "9.0.0",
		"eslint-plugin-sonarjs": "0.18.0",
		"eslint-plugin-sql": "2.3.2",
		"eslint-plugin-storybook": "0.6.10",
		"eslint-plugin-svelte": "2.14.1",
		"eslint-plugin-tailwindcss": "3.8.0",
		"eslint-plugin-testing-library": "5.9.1",
		"eslint-plugin-tsdoc": "0.2.17",
		"eslint-plugin-unicorn": "45.0.2",
		"eslint-plugin-yml": "1.4.0",
		"jsonc-eslint-parser": "2.1.0",
		"yaml-eslint-parser": "1.1.0"
	},
	"devDependencies": {
		"@terminal-nerds/tsup-config": "workspace:*",
		"@terminal-nerds/typescript-config": "workspace:*",
		"@types/eslint": "8.4.10",
		"@workspace/shared": "workspace:*",
		"tsup": "6.5.0",
		"typescript": "4.9.4"
	}
}
