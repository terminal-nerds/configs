{
	"$schema": "https://json.schemastore.org/package",
	"publishConfig": {
		"registry": "https://registry.npmjs.org/",
		"access": "public"
	},
	"name": "@terminal-nerds/config-markdownlint",
	"version": "0.0.1",
	"description": "Terminal Nerds extendable configuration for markdownlint.",
	"keywords": [
		"config",
		"linter",
		"markdownlint"
	],
	"license": "MIT",
	"homepage": "https://github.com/terminal-nerds/configs/tree/main/packages/markdownlint",
	"repository": "terminal-nerds/configs.git",
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=16"
	},
	"main": "markdownlint.json",
	"scripts": {
		"format": "pretty-quick --branch develop --pattern \"packages/markdownlint/**/*\" --verbose",
		"lint": "pnpm lint:format && pnpm lint:md",
		"lint:format": "pretty-quick --branch develop --pattern \"packages/markdownlint/**/*\" --verbose --check",
		"lint:md": "markdownlint . --dot --ignore-path \"../../.gitignore\" --config \"../../.markdownlint.json\""
	},
	"peerDependencies": {
		"markdownlint-cli": "^0.30.0"
	},
	"devDependencies": {
		"markdownlint": "^0.25.0",
		"markdownlint-cli": "^0.30.0"
	}
}
