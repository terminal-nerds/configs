{
	"$schema": "https://json.schemastore.org/package",
	"name": "@terminal-nerds/markdownlint-config",
	"version": "0.9.0",
	"description": "Terminal Nerds extendable configuration for markdownlint.",
	"keywords": [
		"config",
		"linter",
		"markdownlint"
	],
	"license": "MIT",
	"homepage": "https://github.com/terminal-nerds/configs/tree/main/packages/markdownlint",
	"repository": {
		"type": "git",
		"url": "https://github.com/terminal-nerds/configs.git",
		"directory": "packages/markdownlint"
	},
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=18"
	},
	"exports": {
		".": {
			"import": "./dist/index.json",
			"require": "./dist/index.json"
		}
	},
	"files": [
		"/dist"
	],
	"peerDependencies": {
		"markdownlint-cli": "0.34.0"
	},
	"devDependencies": {
		"make-dir-cli": "3.0.0",
		"markdownlint": "0.28.2",
		"strip-json-comments-cli": "2.0.2"
	},
	"scripts": {
		"build": "make-dir \"./dist\" && strip-json-comments --no-whitespace \"./source/index.json\" > \"./dist/index.json\"",
		"clean": "concurrently \"pnpm:clean:*\" --group --timings",
		"clean:build": "del \"./dist\"",
		"clean:cache": "del \"./.turbo\" \"./node_modules/.cache\"",
		"fix": "concurrently \"pnpm:fix:*\" --group --timings",
		"fix:format": "pretty-quick --branch main --pattern \"packages/markdownlint/**\" --verbose",
		"fix:js": "pnpm lint:js --fix",
		"fix:md": "pnpm lint:md --fix",
		"fix:pkg": "syncpack format ; syncpack fix-mismatches",
		"lint": "concurrently \"pnpm:lint:*\" --group --timings",
		"lint:deps": "depcheck",
		"lint:format": "pnpm fix:format --check",
		"lint:js": "DEBUG=\"eslint:cli-engine\" eslint . --cache --cache-location \"./node_modules/.cache/eslint\" --ext .json,.ts ",
		"lint:md": "markdownlint . --config \"../../.markdownlint.json\" --dot --ignore-path \"../../.gitignore\"",
		"prepack": "clean-package --config \"../../.clean-packagerc.cjs\""
	}
}
