{
	"$schema": "https://json.schemastore.org/package",
	"type": "module",
	"name": "@terminal-nerds/lint-staged-config",
	"version": "0.1.1",
	"description": "Terminal Nerds extendable configuration for lint-staged.",
	"keywords": [
		"config",
		"tool",
		"lint-staged"
	],
	"license": "MIT",
	"homepage": "https://github.com/terminal-nerds/configs/tree/main/packages/lint-staged",
	"repository": {
		"type": "git",
		"url": "https://github.com/terminal-nerds/configs.git",
		"directory": "packages/lint-staged"
	},
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=18"
	},
	"exports": {
		".": {
			"types": "./dist/main.d.ts",
			"import": "./dist/main.js"
		}
	},
	"files": [
		"/dist"
	],
	"scripts": {
		"build": "tsup",
		"clean": "concurrently \"pnpm:clean:*\" --group --timings",
		"clean:build": "del \"./dist\"",
		"clean:cache": "del \"./.turbo\" \"./node_modules/.cache\"",
		"dev": "tsup --watch",
		"format": "concurrently \"pnpm:format:*\" --group --timings",
		"format:prettier": "pretty-quick --branch main --pattern \"packages/lint-staged/**/*\" --verbose",
		"format:syncpack": "syncpack format",
		"lint": "concurrently \"pnpm:lint:*\" --group --timings",
		"lint:deps": "depcheck",
		"lint:format": "pretty-quick --branch main --pattern \"./packages/lint-staged/**/*\" --verbose --check",
		"lint:js": "DEBUG=\"eslint:cli-engine\" eslint . --ext .json,.ts --config \"../../.eslintrc.cjs\" --cache --cache-location \"./node_modules/.cache/eslint\"",
		"lint:md": "markdownlint . --dot --ignore-path \"../../.gitignore\" --config \"../../.markdownlint.json\"",
		"lint:types": "tsc --noEmit"
	},
	"peerDependencies": {
		"lint-staged": "13.1.0"
	},
	"dependencies": {
		"pkg-dir": "7.0.0",
		"read-pkg-up": "9.1.0"
	},
	"devDependencies": {
		"@terminal-nerds/tsup-config": "workspace:*",
		"@terminal-nerds/typescript-config": "workspace:*",
		"@workspace/shared": "workspace:*",
		"lint-staged": "13.1.0",
		"tsup": "6.5.0",
		"typescript": "4.9.4"
	}
}
