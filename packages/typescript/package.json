{
	"$schema": "https://json.schemastore.org/package",
	"publishConfig": {
		"registry": "https://registry.npmjs.org/",
		"access": "public"
	},
	"name": "@terminal-nerds/typescript-config",
	"version": "0.0.0",
	"description": "Terminal Nerds extendable configuration for TypeScript.",
	"keywords": [
		"config",
		"tool",
		"typescript"
	],
	"license": "MIT",
	"homepage": "https://github.com/terminal-nerds/configs/tree/main/packages/typescript",
	"repository": "terminal-nerds/configs.git",
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=16"
	},
	"main": "tsconfig.json",
	"scripts": {
		"clean": "ultra clean:all",
		"clean:all": "pnpm clean:cache",
		"clean:cache": "rimraf \"./node_modules/.cache\" ; rimraf \"./.ultra.cache.json\"",
		"format": "ultra format:all",
		"format:all": "pnpm format:prettier ; pnpm format:syncpack",
		"format:prettier": "pretty-quick --branch develop --pattern \"packages/typescript/**/*\" --verbose",
		"format:syncpack": "syncpack format",
		"lint": "ultra lint:all",
		"lint:all": "pnpm lint:format ; pnpm lint:js ; pnpm lint:md",
		"lint:format": "pretty-quick --branch develop --pattern \"packages/typescript/**/*\" --verbose --check",
		"lint:js": "eslint . --ext .json --cache --cache-location \"./node_modules/.cache/eslint\"",
		"lint:md": "markdownlint . --dot --ignore-path \"../../.gitignore\" --config \"../../.markdownlint.json\""
	},
	"ultra": {
		"concurrent": [
			"format:all",
			"lint:all"
		]
	},
	"peerDependencies": {
		"typescript": "4.5.5"
	},
	"devDependencies": {
		"typescript": "4.5.5"
	}
}
