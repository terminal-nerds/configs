{
	"$schema": "https://json.schemastore.org/package",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com",
		"access": "public"
	},
	"name": "@terminal-nerds/config-prettier",
	"version": "0.1.0",
	"description": "Terminal Nerds extendable configuration for Prettier.",
	"keywords": [
		"config",
		"formatter",
		"prettier"
	],
	"license": "MIT",
	"homepage": "https://github.com/terminal-nerds/configs/tree/main/packages/prettier",
	"repository": "terminal-nerds/configs.git",
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=16"
	},
	"main": "dist/index.js",
	"files": [
		"/dist"
	],
	"scripts": {
		"build": "run-s build:*",
		"build:module": "esbuild --bundle ./source/index.ts --outdir=./dist --minify --sourcemap --platform=node --target=node16 --format=cjs --analyze=verbose --color=true",
		"build:types": "tsc --emitDeclarationOnly",
		"clean:*": "run-s clean:*",
		"clean:build": "rimraf ./dist",
		"clean:cache": "rimraf ./node_modules/.cache",
		"dev": "run-p dev:*",
		"dev:module": "pnpm build:module -- --watch",
		"dev:types": "pnpm build:types -- --watch"
	},
	"peerDependencies": {
		"prettier": "^2.5.1"
	},
	"devDependencies": {
		"@types/node": "^17.0.5",
		"@types/prettier": "^2.4.2",
		"@workspace/configs": "workspace:*",
		"@workspace/helpers": "workspace:*",
		"deepmerge": "^4.2.2",
		"esbuild": "^0.14.10",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"tslib": "^2.3.1",
		"typescript": "^4.5.4"
	}
}
