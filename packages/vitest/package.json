{
	"$schema": "https://json.schemastore.org/package",
	"type": "module",
	"name": "@terminal-nerds/vitest-config",
	"version": "0.4.0",
	"description": "Terminal Nerds extendable configuration for Vitest.",
	"keywords": [
		"config",
		"tool",
		"vitest"
	],
	"license": "MIT",
	"homepage": "https://github.com/terminal-nerds/configs/tree/main/packages/vitest",
	"repository": {
		"type": "git",
		"url": "https://github.com/terminal-nerds/configs.git",
		"directory": "packages/vitest"
	},
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=18"
	},
	"exports": {
		".": {
			"types": "./dist/main.d.ts",
			"import": "./dist/main.js"
		},
		"./base": {
			"types": "./dist/base.d.ts",
			"import": "./dist/base.js"
		},
		"./with-coverage": {
			"types": "./dist/with-coverage.d.ts",
			"import": "./dist/with-coverage.js"
		}
	},
	"files": [
		"/dist"
	],
	"scripts": {
		"build": "tsup",
		"clean": "concurrently \"pnpm:clean:*\" --group --timings",
		"clean:build": "del \"./dist\"",
		"clean:cache": "del \"./.turbo\" \"./node_modules/.cache\"",
		"dev": "tsup --watch",
		"fix": "concurrently \"pnpm:fix:*\" --group --timings",
		"fix:format": "pretty-quick --branch main --pattern \"packages/vitest/**\" --verbose",
		"fix:js": "pnpm lint:js --fix",
		"fix:md": "pnpm lint:md --fix",
		"fix:pkg": "syncpack format ; syncpack fix-mismatches",
		"lint": "concurrently \"pnpm:lint:*\" --group --timings",
		"lint:deps": "depcheck",
		"lint:format": "pnpm fix:format --check",
		"lint:js": "DEBUG=\"eslint:cli-engine\" eslint . --cache --cache-location \"./node_modules/.cache/eslint\" --ext .json,.ts ",
		"lint:md": "markdownlint . --config \"../../.markdownlint.json\" --dot --ignore-path \"../../.gitignore\"",
		"lint:types": "tsc --noEmit",
		"prepack": "clean-package --config \"../../.clean-packagerc.cjs\""
	},
	"peerDependencies": {
		"vitest": "0.28.4"
	},
	"dependencies": {
		"@vitest/coverage-c8": "0.28.4",
		"@vitest/ui": "0.28.4",
		"vite": "4.1.1"
	},
	"devDependencies": {
		"@terminal-nerds/tsup-config": "workspace:*",
		"@terminal-nerds/typescript-config": "workspace:*",
		"tsup": "6.6.3",
		"typescript": "4.9.5",
		"vitest": "0.28.4"
	}
}
