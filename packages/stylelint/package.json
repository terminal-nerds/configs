{
	"$schema": "https://json.schemastore.org/package",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com",
		"access": "public"
	},
	"name": "@terminal-nerds/config-stylelint",
	"version": "0.1.0",
	"description": "Terminal Nerds extendable configuration for Stylelint.",
	"keywords": [
		"config",
		"linter",
		"stylelint"
	],
	"license": "MIT",
	"homepage": "https://github.com/terminal-nerds/configs/tree/main/packages/stylelint",
	"repository": "terminal-nerds/configs.git",
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "run-s build:*",
		"build:module": "esbuild --bundle \"./source/index.ts\" --outdir=\"./dist\" --minify --sourcemap --platform=node --target=node16 --format=cjs --analyze=verbose --color=true",
		"build:types": "tsc --emitDeclarationOnly",
		"clean": "run-p clean:*",
		"clean:build": "rimraf \"./dist\"",
		"clean:cache": "rimraf \"./node_modules/.cache\"",
		"dev": "run-p dev:*",
		"dev:module": "pnpm build:module -- --watch",
		"dev:types": "pnpm build:types -- --watch",
		"format": "pretty-quick --branch develop --pattern \"packages/stylelint/**/*\" --verbose",
		"lint": "run-s lint:* --continue-on-error",
		"lint:format": "pretty-quick --branch develop --pattern \"packages/stylelint/**/*\" --verbose --check",
		"lint:js": "eslint . --ext .json,.ts --cache --cache-location \"./node_modules/.cache/eslint\"",
		"lint:types": "tsc --noEmit"
	},
	"devDependencies": {
		"@types/node": "^17.0.5",
		"@workspace/configs": "workspace:*",
		"@workspace/helpers": "workspace:*"
	}
}
