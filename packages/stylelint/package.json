{
	"$schema": "https://json.schemastore.org/package",
	"publishConfig": {
		"registry": "https://registry.npmjs.org/",
		"access": "public"
	},
	"name": "@terminal-nerds/config-stylelint",
	"version": "1.0.0-canary.2",
	"description": "Terminal Nerds extendable configuration for Stylelint.",
	"keywords": [
		"config",
		"linter",
		"stylelint"
	],
	"license": "MIT",
	"homepage": "https://github.com/terminal-nerds/configs/tree/main/packages/stylelint",
	"repository": "terminal-nerds/configs.git",
	"bugs": "https://github.com/terminal-nerds/configs/issues",
	"engines": {
		"node": ">=16"
	},
	"main": "dist/index.js",
	"scripts": {
		"build": "ultra build:all",
		"build:all": "pnpm clean:build && pnpm build:types && pnpm build:package",
		"build:types": "tsc --emitDeclarationOnly",
		"build:package": "esbuild --bundle \"./source/index.ts\" --outdir=\"./dist\" --minify --sourcemap --platform=node --target=node16 --format=cjs --analyze=verbose --color=true",
		"clean": "ultra clean:all",
		"clean:all": "pnpm clean:build; pnpm clean:cache",
		"clean:build": "rimraf \"./dist\"",
		"clean:cache": "rimraf \"./node_modules/.cache\"",
		"dev": "tsc --build --watch",
		"format": "ultra format:all",
		"format:all": "pnpm format:prettier ; pnpm format:syncpack",
		"format:prettier": "pretty-quick --branch develop --pattern \"./packages/stylelint/**/*\" --verbose",
		"format:syncpack": "syncpack format",
		"lint": "ultra lint:all",
		"lint:all": "pnpm lint:format ; pnpm lint:js ; pnpm lint:md ; pnpm lint:types",
		"lint:format": "pretty-quick --branch develop --pattern \"./packages/stylelint/**/*\" --verbose --check",
		"lint:js": "DEBUG=\"eslint:cli-engine\" eslint . --ext .json,.ts --cache --cache-location \"./node_modules/.cache/eslint\"",
		"lint:md": "markdownlint . --dot --ignore-path \"../../.gitignore\" --config \"../../.markdownlint.json\"",
		"lint:types": "tsc --noEmit"
	},
	"ultra": {
		"concurrent": [
			"clean:all",
			"format:all",
			"lint:all"
		]
	},
	"peerDependencies": {
		"stylelint": "^14.2.0"
	},
	"dependencies": {
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard": "^24.0.0",
		"stylelint-config-standard-scss": "^3.0.0",
		"stylelint-high-performance-animation": "^1.6.0",
		"stylelint-no-unsupported-browser-features": "^5.0.2",
		"stylelint-order": "^5.0.0",
		"stylelint-scss": "^4.1.0"
	},
	"devDependencies": {
		"@types/node": "^17.0.5",
		"@workspace/configs": "workspace:*",
		"@workspace/helpers": "workspace:*",
		"deepmerge-ts": "^2.0.1",
		"stylelint": "^14.2.0"
	}
}
